import os
# RUNNABLE OBJECTS that we use in pool map by calling run instance on 

PROGS_ROOT_repeat_scout="/home/mahdi//programs/RepeatScout-1/"


class ProgramRunner():
    commands = {
        "build_lmer_table" : PROGS_ROOT_repeat_scout+"build_lmer_table -l 12 -sequence %s -freq %s",
        "repeatScout" : PROGS_ROOT_repeat_scout+"RepeatScout -sequence %s -output %s -freq %s -l 12",
        }

    def __init__(self, program, params):
        self.program = program
        self.command = self.commands[program] % tuple(params)

    def run(self):
        os.system(self.command)

    def dryRun(self):
        return self.command
    

        
